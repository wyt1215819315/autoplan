<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.system.task.dao.HistoryTaskLogDao">
    <resultMap id="BaseResultMap" type="com.github.system.task.entity.HistoryTaskLog">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="auto_id" jdbcType="INTEGER" property="autoId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="userid" jdbcType="INTEGER" property="userid"/>
        <result column="date" jdbcType="TIMESTAMP" property="date"/>
        <result column="text" jdbcType="VARCHAR" property="text"/>
        <result column="other" jdbcType="VARCHAR" property="other"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, auto_id, `name`, `type`, `status`, userid, `date`, `text`, other
    </sql>
    <delete id="deleteByAutoId">
        delete
        from auto_log
        where auto_id = #{autoId}
          and type = #{type}
          and userid = #{userid}
    </delete>
    <select id="selectByCondition" resultType="com.github.system.task.entity.HistoryTaskLog">
        select
        <include refid="Base_Column_List"/>
        from auto_log
        where userid = #{userid}
        and auto_id = #{autoId}
        and type = #{type}
        order by date desc
        limit 1
    </select>
</mapper>